<h2>Listing Users</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Site</th>
    <th>Disabled?</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.site_name %></td>
      <td><%= user.disabled ? 'Yes' : 'No' %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

