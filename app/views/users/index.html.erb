<h2>Listing Users</h2>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Disabled?</th>
    <th>Notify?</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.disabled ? 'Yes' : 'No' %></td>
      <td><%= user.notify ? 'Yes' : 'No' %></td>
      <td>
        <%= link_to 'Show', user %> |
        <%= link_to 'Edit', edit_user_path(user) %> |
        <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
