<div id="box">
  <div class="block" id="block-login">
    <h2>Login to <%= Site.current_name %></h2>
    <div class="login content">
      <%= flash_messages %>
      <%= form_tag login_path, :method => :post, :class => 'form login' do %>
        <%= hidden_referrer_input_tag %>

        <div class="group wat-cf">
          <div class="left">
            <%= label_tag :name, nil, :class => 'right label' %>
          </div>
          <div class="right">
            <%= text_field_tag :name, nil, :class => 'text_field' %>
          </div>
        </div>

        <div class="group wat-cf">
          <div class="left">
            <%= label_tag :password, nil, :class => 'right label'  %>
          </div>
          <div class="right">
            <%= password_field_tag :password, nil, :class => 'text_field' %>
          </div>
        </div>

        <div class="group navform wat-cf">
          <div class="right">
            <button class="button" type="submit">
              <img src="images/web-app-theme/icons/key.png" alt="Save" /> Login
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
